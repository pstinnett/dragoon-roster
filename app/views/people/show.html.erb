<br/>
<div class="container">
<%= render 'person_badge', {:person => @person} %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Characters</h3>
    </div>
    <div class="panel-body">
        <% @person.characters.each do |character| %>
            <%= render 'character_badge', {:character => character} %>
        <% end %>
    </div>
</div>
<!-- start tab test -->
<ul class="nav nav-tabs">
    <li role="presentation" class="active"><a data-toggle="tab"  href='#pvpstats'>PvP</a></li>
    <li role="presentation"><a data-toggle="tab" href='#pvestats'>PvE</a></li>
</ul>
<div class="tab-content">
    <div id="pvpstats" class="tab-pane active">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Merged PvP Stats</h3>
            </div>
            <div class="panel-body">
                <%= render "people/stats_table", {:stats => @person.account_stats['allPvP']['allTime']} %>
            </div>
        </div>
    </div>
    <div id="pvestats" class="tab-pane">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Merged PvE Stats</h3>
            </div>
            <div class="panel-body">
                <%= render "people/stats_table", {:stats => @person.account_stats['allPvE']['allTime']} %>
            </div>
        </div>
    </div>
</div>

<!-- end tab test -->


<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Links</h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item">
                <a href="/people/<%= @person.destiny_account['userInfo']['membershipType'] %>/<%= @username %>/factionstats">
                    Closest Faction Levelups
            </li>
            <li class="list-group-item">
                <a href="<%= @ghost_link %>">Destiny Ghost Hunter</a>
            </li>
        </ul>
    </div>
</div>

</div>
